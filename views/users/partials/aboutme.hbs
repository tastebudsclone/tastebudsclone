<div class="card mb-5 ">
    <div class="card-body ">
        <div class="d-flex justify-content-between">
            <h5 class="card-title fa-regular fa-pen-to-square">About me...</h5> 
        </div>
        <form method="POST" action="/users/{{user.username}}?section=about">
            <div class="input-group mb-2">
                <textarea class="form-control overflow-y-auto" name="about" rows="8" {{enableTextArea user.username currentUser.username}}>{{user.about}}</textarea>
                <button type="submit" class="btn btn-outline-secondary {{activeEditButton user.username currentUser.username}}"><i class="fa fa-edit"></i></button>
            </div>
        </form>
    </div>
</div>
<div class="card mb-5">
    <div class="card-body ">
        <h5 class="card-title">My favorite bands are...</h5>
         <form method="POST" action="/users/{{user.username}}?section=about">
            <div class="input-group mb-2">
                <div class="form-control overflow-y-auto" name="artist"readonly>{{#each user.artists as |artist|}} <a href="/artist/{{artist.id}}">{{artist.name}}</a>, {{/each}}</div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5>Shoutbox</h5>
        <div class="card-body">
            {{#each comments as |comment|}}
            <div class="p-2 mb-2 card">
                <b><a href="/users/{{comment.creator.username}}?section=about">{{comment.creator.username}}</a></b>
                <p>{{comment.message}}</p>
                <small>{{date comment.createdAt}}</small>
            </div>
            {{/each}}
        </div>
        <form method="POST" action="/users/{{user.username}}/comment">
            <div class="input-group mb-2">
                <textarea class="form-control overflow-y-auto mb-2" name="message" rows="3" placeholder="Say something to {{user.username}}"></textarea>
                <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-comment"></i></button>
            </div>
        </form>
    </div>
</div>