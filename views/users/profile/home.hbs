<div class=" d-flex justify-content-start align-items-end p-2 mb-5 bg-secondary rounded" style="--bs-bg-opacity: .5;">
    <form method="GET" action="/users/{{user.username}}/settings" enctype="multipart/form-data">
        <input type="file" name="avatar" hidden>
        <label for="avatar-image">
          <button type="submit" onclick="findAvatar()"><img class="avatar"src="{{user.avatar}}" alt="Avatar Image"></button>
        </label>
    </form>
    <h2 class="ps-3 modal-dialog-centered flex-grow-1">{{user.username}}   {{user.city}} {{user.age}}</h2> 
    <div>
        <a class="btn btn-secondary me-1">Add photo</a>
        <a class="btn btn-secondary me-1">Likes</a>
        <a href="/users/{{user.username}}/settings" class="btn btn-secondary"><i class="fa fa-gear"></i></a>
    </div>
</div>

<div class="container d-flex">
    <div class="row container-fluid">
        <div class="sidebar col">
            <div class="d-flex align-items-start">
                <div class="nav flex-column nav-pills me-3 bg-secondary rounded p-3" style="--bs-bg-opacity: .5;" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a href="/users/{{user.username}}?section=about" class="btn {{activeButtonClass 'about' currentSection}} mb-1" type="button">Overview</a>
                    <a href="/users/{{user.username}}?section=tastes" class="btn mb-1 {{activeButtonClass 'tastes' currentSection}}" type="button">Tastes</a>
                    <a href="/users/{{user.username}}?section=activity" class="btn mb-1 {{activeButtonClass 'activity' currentSection}}" type="button">Activity</a>
                    <a href="/users/{{user.username}}?section=songs" class="btn mb-1 {{activeButtonClass 'songs' currentSection}}" type="button">Songs</a>
                    <a href="/users/{{user.username}}?section=events" class="btn {{activeButtonClass 'events' currentSection}}" type="button">Events</a>
                </div>
            </div>
         </div>
        
         <div class="content col-7">
            <div class="about {{activeSectionClass 'about' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> aboutme}}
            </div>
            <div class="card {{activeSectionClass 'tastes' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> tastes}}
            </div>
            <div class="card {{activeSectionClass 'activity' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> activity}}
            </div>
            <div class="card {{activeSectionClass 'songs' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> songs}}
            </div>
            <div class="card {{activeSectionClass 'events' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> events}}
            </div>
         </div>

         <div class="col-3 sidecontent bg-secondary rounded p-2" style="--bs-bg-opacity: .5;">
             <div class="card mb-5">
                <div class="card-body">
                    <p class="card-text">My photos</p>
                </div>
                <img src="..." class="card-img-top" alt="...">
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Facts about me:</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-flag"></i> Nationality<p>{{user.nationality}}</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-globe"></i> City<p>{{user.city}}</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-user"></i> Height<p>{{user.height}}</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-compass"></i> Orientation<p>{{user.orientation}}</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-heart"></i> Status<p>{{user.status}}</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-star"></i> Here for<p>{{user.hereFor}}</p></li>
                    </ul>
                </div>
                </div>
         </div>
    </div>
</div>

