<div class=" d-flex justify-content-between align-items-end p-2 mb-5 bg-secondary rounded" style="--bs-bg-opacity: .5;">
    <div class="d-flex flex-row justify-content-between align-items-end">
        <img class="avatar"src="{{user.avatar}}" alt="Avatar Image">
        <strong><small class="ps-3 fs-2">{{user.username}}</small></strong>
        <small class="ps-3 pb-2">{{user.city}}</small>
        <h5 class="ps-3">{{user.age}}</h5>
    </div> 
    <div class="{{activeEditButton user.username currentUser.username}}">
        <a href="/users/{{user.username}}/settings" class="btn btn-secondary">Add photo</a>
        <a href="/users/{{user.username}}/likes" class="btn btn-secondary">Likes</a>
        <a href="/users/{{user.username}}/settings" class="btn btn-secondary"><i class="fa fa-gear"></i></a>
    </div>
</div>

<div class="container d-flex">
    <div class="row container-fluid">
        <div class="sidebar col">
            <div class="d-flex align-items-start">
                <div class="nav flex-column nav-pills bg-secondary rounded p-3" style="--bs-bg-opacity: .5;" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a href="/users/{{user.username}}?section=about" class="btn {{activeButtonClass 'about' currentSection}} mb-1"><i class="fa fa-home"></i><br>Overview</a>
                    <a href="/users/{{user.username}}?section=tastes" class="btn mb-1 {{activeButtonClass 'tastes' currentSection}}" type="button"><i class="fa fa-tag"></i><br>Tastes</a>
                    <a href="/users/{{user.username}}?section=activity" class="btn mb-1 {{activeButtonClass 'activity' currentSection}}" type="button"><i class="fa fa-list"></i><br>Activity</a>
                    <a href="/users/{{user.username}}?section=songs" class="btn mb-1 {{activeButtonClass 'songs' currentSection}}" type="button"><i class="fa fa-music"></i><br>Songs</a>
                    <a href="/users/{{user.username}}?section=events" class="btn {{activeButtonClass 'events' currentSection}}" type="button"><i class="fa fa-calendar"></i><br>Events</a>
                </div>
            </div>
         </div>
        
         <div class="content col-7">
            <div class="about {{activeSectionClass 'about' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> aboutme}}
            </div>
            <div class="card {{activeSectionClass 'tastes' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> tastes}}
            </div>
            <div class="card {{activeSectionClass 'activity' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> activity}}
            </div>
            <div class="card {{activeSectionClass 'songs' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> songs}}
            </div>
            <div class="card {{activeSectionClass 'events' currentSection}} p-3 bg-secondary rounded" style="--bs-bg-opacity: .5;">
                {{> events}}
            </div>
         </div>

         <div class="col-3 sidecontent bg-secondary rounded p-2" style="--bs-bg-opacity: .5;">
             <div class="card border-light mb-5">
                <div class="card-body">
                    <p class="card-text">My photos</p>
                </div>
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                        <img src={{user.photos.[0]}} class="d-block w-auto" style="height: 200px">
                        </div>
                        {{#each photos as |photo|}}
                        <div class="carousel-item">
                        <img src={{photo}} class="d-block w-auto" style="height: 200px">
                        </div>
                        {{/each}}
                        
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="card border-light">
                <div class="card-body">
                    <h5 class="card-title">Facts about me:</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-flag"></i> Nationality<p>{{user.nationality}}</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-globe"></i> City<p>{{user.city}}</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-user"></i> Height<p>{{user.height}} cm</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-compass"></i> Orientation<p>{{user.orientation}}</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-heart"></i> Status<p>{{user.status}}</p></li>
                        <li class="list-group-item justify-content-between align-items-center"><i class="fa fa-star"></i> Here for<p>{{user.hereFor}}</p></li>
                    </ul>
                </div>
                </div>
         </div>
    </div>
</div>

