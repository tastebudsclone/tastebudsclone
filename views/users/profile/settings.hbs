<form method="POST" action="/users/{{user.username}}/settings" enctype="multipart/form-data"class="row g-3">
  <div class="img-container">
    <img src="{{user.avatar}}" class="img-thumbnail avatar" alt="Avatar">
    <div class="mb-3 col-4">
        <label for="formFile" class="form-label" for="image">Change your profile picture</label>
        <input  class="form-control" name="avatar" type="file" id="formFile" multiple>
    </div>
  </div>
 
  <div class="col-md-4">
    <label class="form-label">Username</label>
    <div class="input-group has-validation">
      <span class="input-group-text" id="inputGroupPrepend3"><i class="fa fa-user"></i></span>
      <input type="text" class="form-control" value="{{user.username}}" readonly>
    </div>
  </div>
  <div class="col-md-4">
    <label class="form-label">First name</label>
    <input type="text" name="name" class="form-control" value="{{user.name}}">
  </div>
  <div class="col-4">
    <label class="form-label">City</label>
    <input type="text" class="form-control"  value="{{user.city}}" name="city">
  </div>
  <div class="col-4">
    <label class="form-label">Nationality</label>
    <input type="text" class="form-control"  value="{{user.nationality}}" name="nationality">
  </div>
  <div class="col-4">
    <label class="form-label">Height (in cm) </label>
    <input type="text" class="form-control"  value="{{user.height}}" name="height">
  </div>
</div>
<div class="d-flex flex-row align-items-center justify-content-between">
  <div class="col-md-3">
    <label class="form-label" for="status">Status</label>
    <select class="form-select" name="status">
      <option value="Single" {{selected "Single" user.status}}>Single</option>
      <option value="In a relationship" {{selected "In a relationship" user.status}}>In a relationship</option>
      <option value="Married" {{selected "Married" user.status}}>Married</option>
    </select>
  </div>
  <div class="col-md-3">
    <label for="orientation" class="form-label">Orientation</label>
    <select class="form-select" name="orientation">
      <option value="Straight" {{selected "Straight" user.orientation}}>Straight</option>
      <option value="Gay" {{selected "Gay" user.orientation}}>Gay</option>
      <option value="Bisexual" {{selected "Bisexual" user.orientation}}>Bisexual</option>
    </select>
  </div>
  <div class="col-md-3">
    <label for="gender" class="form-label">Gender</label>
    <select class="form-select" name="gender">
      <option value="Male" {{selected "Male" user.gender}}>Male</option>
      <option value="Female" {{selected "Female" user.gender}}>Female</option>
      <option value="I prefer not to say" {{selected "I prefer not to say" user.gender}}>I prefer not to say</option>
    </select>
  </div>
  </div>
  </div>
  </div>
  <div class="radioForm">
    <p>Here for:</p>
    <div class="form-check">
      <input class="form-check-input" value="Dating" type="checkbox" name="hereFor" {{checked "Dating" user.hereFor}}>
      <label class="form-check-label">Dating</label>
    </div>
      <div class="form-check">
      <input class="form-check-input" value="Music Discovery" type="checkbox" name="hereFor" {{checked "Music Discovery" user.hereFor}}>
      <label class="form-check-label">Music Discovery</label>
    </div>
      <div class="form-check">
      <input class="form-check-input" value="Concert Buddies" type="checkbox" name="hereFor" {{checked "Concert Buddies" user.hereFor}}>
      <label class="form-check-label">Concert Buddies</label>
    </div>
      <div class="form-check">
      <input class="form-check-input" value="New Friends" type="checkbox" name="hereFor" {{checked "New Friends" user.hereFor}}>
      <label class="form-check-label">New Friends</label>
    </div>
  </div>
  <div>Start building your photo collection!</div>
  <div class="input-group mb-3">
    <label class="input-group-text" for="inputGroupFile01"><i class="fa fa-image"></i></label>
    <input type="file" class="form-control" name="photos" multiple>
  </div>
  <div>
     <div class="d-flex flex-wrap">
      {{#each user.photos as |photo|}}
      <div class="m-2 d-flex flex-column">
        <img src={{photo}} style="width: 400px; height: 200px">
        <a href="/users/{{../currentUser.username}}/deletePhoto?id={{photo}}" class="mt-1 btn btn-danger"><i class="fa fa-trash"></i></a>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="col-12">
    <button class="btn btn-secondary" type="submit">Submit changes</button>
  </div>
</form>