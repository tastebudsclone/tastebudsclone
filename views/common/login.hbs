<div class="d-flex justify-content-center">
  <h1 class="display-1">Welcome to Tastebuds!</h1>
</div>

<div class="d-flex flex-column align-items-center justify-content-center">
  <div class="col-4">
    <form action="/login" method="POST">
      <div class="mb-3">
        <label class="form-label">Email address</label>
        <input type="email" name="email" value="{{user.email}}"class="form-control {{#if errors.email}}is-invalid{{/if}}">
        {{#if errors.email}}<div class="invalid-feedback">{{errors.email}}</div>{{/if}}
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" name="password" value="{{user.password}}" class="form-control {{#if errors.password}}is-invalid{{/if}}">
        {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
      </div>
      <button type="submit" class="mb-3 btn btn-secondary">Log in</button>
    </form>
    <div>
    <a href="/signup" class="btn btn-secondary">Sign Up</a>
    </div>
  </div>
</div>




